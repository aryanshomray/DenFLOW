{
    "name": "DenFlow",
    "n_gpu": 1,

    "arch": {
        "type": "Glow",
        "args": {
            "config": {
                "num_channels": 3,
                "num_flow": 2,
                "num_scale": 2,
                "crop_size": 256
            }
        }
    },
    "data_loader": {
        "type": "dataloader",
        "args":{
            "data_dir": "Data/SIDD_Small_sRGB_Only/Data",
            "process_dataset": false,
            "batch_size": 2,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 2,
            "crop_size": 256
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.0001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "nll_loss",
    "metrics": [
        "psnr","ssim"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 100,

        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 10,

        "tensorboard": true
    }
}
